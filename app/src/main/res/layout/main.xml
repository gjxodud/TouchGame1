<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.touchgame.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/main"
    android:gravity="right">

    <Button
        android:layout_marginTop="300dp"
        android:layout_width="193dp"
        android:layout_height="88dp"
        android:layout_marginEnd="100dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/five"
        android:onClick="five"
        android:background="@drawable/b5"/>

    <Button
        android:layout_width="193dp"
        android:layout_height="88dp"
        android:layout_marginEnd="100dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/ten"
        android:onClick="ten"
        android:background="@drawable/b10"/>

    <Button
        android:layout_width="193dp"
        android:layout_height="88dp"
        android:layout_marginEnd="100dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/score5"
        android:onClick="score"
        android:background="@drawable/s5"/>

    <Button
        android:layout_width="193dp"
        android:layout_height="88dp"
        android:layout_marginEnd="100dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/score10"
        android:onClick="score"
        android:background="@drawable/s10"/>
</LinearLayout>
